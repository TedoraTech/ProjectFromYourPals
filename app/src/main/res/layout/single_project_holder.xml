<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/singleProjectHolder_productImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon"/>

    <TextView
        android:id="@+id/singleProjectHolder_projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/singleProjectHolder_productImage"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:maxLines="1"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:text="Project Name"/>


    <TextView
        android:id="@+id/singleProjectHolder_yearOfSubmition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singleProjectHolder_productImage"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="year of submission"/>

    <TextView
        android:id="@+id/singleProjectHolder_problemStatement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singleProjectHolder_yearOfSubmition"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="problem Statement"/>

</RelativeLayout>